<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!--推荐新品-->
        <RelativeLayout
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:text="推荐新品"
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/item_ll_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:text="更多"
                    android:textColor="@color/textGray"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fengexian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_rv_lookshop"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--店铺简介-->
        <RelativeLayout
            android:padding="13dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_logo"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_logo"
                android:id="@+id/tv_name"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/textBlack"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:id="@+id/tv_attention"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="@dimen/dp10"-->
                <!--android:gravity="right"-->
                <!--android:textSize="12sp"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="8dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:textColor="@color/white"-->
                <!--android:text="关注"-->
                <!--android:background="@drawable/bg_red"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

        </RelativeLayout>

        <View
            android:background="@color/board"
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!--好评率-->
        <LinearLayout
            android:paddingTop="@dimen/dp10"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/textBlack"
                android:textSize="14sp"
                android:text="好评率"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include layout="@layout/texts"/>

            <TextView
                android:id="@+id/tv_baifenbi"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/textGray"
                android:textSize="14sp"
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <!--开店时间-->
        <LinearLayout
            android:background="@color/white"
            android:paddingTop="@dimen/dp10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"
                android:text="开店时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/textGray"
                android:textSize="14sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!--店铺资质-->
        <LinearLayout
            android:background="@color/white"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="50dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"
                android:text="店铺资质"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/item_iv_zizhi"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@color/home_bule"
                android:layout_width="180dp"
                android:layout_height="210dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
