<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.xingguang.localrun.maincode.mine.view.MineApplyEnterActivity">

    <include
        android:id="@+id/toolsbar"
        layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolsbar"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--姓名-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="姓名"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.xingguang.localrun.view.ClearEditText
                        android:id="@+id/apply_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:lines="1"
                        android:maxLines="11"
                        android:padding="@dimen/outside_margin"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <!--手机号-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="手机号"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.xingguang.localrun.view.ClearEditText
                        android:id="@+id/apply_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@null"
                        android:gravity="left"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="11"
                        android:padding="@dimen/outside_margin"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <!--公司名称-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="公司名称"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.xingguang.localrun.view.ClearEditText
                        android:id="@+id/apply_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="@dimen/outside_margin"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <!--入驻类目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="入驻类目"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/apply_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!--上传图片-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="公司资质"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/apply_pullimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/outside_margin"
                        android:layout_toLeftOf="@+id/rl_get_messs"
                        android:background="@null"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLines="6"
                        android:padding="@dimen/outside_margin"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp"
                        android:theme="@style/MyEditText" />

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl_shangchuan_img"
                        android:layout_width="85dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_register_bg"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_shangchuan_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:text="上传图片"
                            android:textColor="@color/textBlack"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--公司介绍-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_jieshao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="公司介绍"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <com.xingguang.localrun.view.ClearEditText
                    android:id="@+id/apply_jieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/outside_margin"
                    android:background="@null"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:minLines="6"
                    android:padding="@dimen/outside_margin"
                    android:textColor="@color/title_color"
                    android:textColorHint="@color/hint_color"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp"
                    android:theme="@style/MyEditText" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/dp20"
                android:layout_marginTop="25dp"
                android:background="@drawable/corners30_solidgreen"
                android:gravity="center"
                android:text="申请入住"
                android:textColor="#fff"
                android:textSize="16sp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
